<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path 'https://res.cloudinary.com/dsvj5w5lg/image/upload/v1592203658/Bunte_Auswahl_Cocktails_Kalorien_in_Cocktails_shutterstock_666418012-1500x710_b2n7ex.jpg' %>');">
  <div class="banner-content">
    <h1>Crazy Cocktailzzz</h1>
    <h4>Try our best cocktails</h4>
    <%= link_to 'New Cocktail', new_cocktail_path, class: "btn btn-primary btn-lg"%>
  </div>
</div>

<div class="container">
  <% @cocktails.each do |cocktail| %>
  <div class="col-12 col-md-6 col-lg-3">
    <% background_url = cl_image_path cocktail.photo.key, width: 400, height: 500, crop: :fill %>
    <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= background_url %>');">
      <div class="card-description">
        <h4><%= cocktail.name %></h4>
      </div>
      <%= link_to 'Show', cocktail %>
    </div>
  </div>
</div>
<% end %>
