<h2> <%= @cocktail.name %> </h2>

<% @cocktail.doses.each do |dose| %>
<p> <strong>Description: </strong><%= dose.description %></p>
<br>
<p><strong>Ingredient: </strong><%= dose.ingredient.name %></p>

<br>
<%= link_to "Destroy", dose_path(dose), method: :delete, data: { confirm: 'Are you sure you want to delete this cocktail?' } %>
<%= link_to 'Add a dose', new_cocktail_dose_path(dose) %>
<% end %>


<%= link_to 'Back', cocktails_path %>

